/* pages/zz-inpage/setting/setting.wxss */

.setting-menu-text {  /* 「设置」页面的白块菜单栏项的文字 */
  font-size: 1.1em;
}

.whitebox-hr { /* 白块 中间的注释块 */
  padding-inline: 1em;
  margin-inline: 0.55em;
}

.setting-menu-hrtext {  /* 「设置」页面的注释文字 */
  font-size: 0.9em;
}

.setting-menu-name {  /* 「昵称」选项的样式 */
  color: #abab96;
  float: right;
  text-align: right;
  margin-top: 2px;
}

.setting-toolbar {  /* 操作栏 */
  position: fixed;
  background-color: #fff;
  width: 100%;
  height: 50px;
  bottom: 0px;
  padding-bottom: constant(safe-area-inset-bottom);  /* 很重要 */
  padding-bottom: env(safe-area-inset-bottom);
}

.setting-save {
  float: right;
  padding: 0.17em 1.5em;
  background-color: #3939ff;
  margin: 1em 0.6em;
  border-radius: 1em;
  margin-block: 0.5em;
  color: #ffeaea;
}

.text-center {  /* 文字居中 */
  text-align: center;
}