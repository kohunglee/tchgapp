/* pages/zz-inpage/bnsinfor.wxss */
page {
  background-color: white;
}

.page-infor {
  padding: 10px;
}

.infor-name {
  font-size: 2em;
  margin: 10px;
}

.infor-operating-hours {
  margin-left: 10px;
}

.infor-away-from {
  float: right;
  position: absolute;
  right: 20px;
  margin-top: -25px;
}

.infor-introduction {
  text-indent: 2em;
  font-family: serif;
  margin: 10px;
  text-align: justify;
}

/* 操作栏 */
.infor-toolbar {
  position: fixed;
  background-color: #f7f7f7;
  width: 100%;
  height: 50px;
  bottom: 0px;
  padding-bottom: constant(safe-area-inset-bottom);  /* 很重要 */
  padding-bottom: env(safe-area-inset-bottom);
}
.infor-right-01 {
  display: block;
  position: absolute;
  right: 180px;
}
.infor-storeUp {
  width: 27px;
  height: 27px;
  margin-top: 6px;
}
.infor-storeUpText {
  margin-top: 31px;
  font-size: 10px;
  margin-right: -2px;
  color: #696e77;
}
.infor-showQCode {
  display: block;
  position: absolute;
  right: 0;
  background-color: #3CC524;
  width: 160px;
  height: 100%;
  padding-top: 12px;
  text-align: center;
}

